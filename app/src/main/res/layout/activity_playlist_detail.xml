<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAppTitle"
        style="@style/WavvyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wavvy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPlaylistTitle"
        style="@style/SectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Playlist"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPlaylistMeta"
        style="@style/SmallSecondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0 skladieb â€¢ 0:00"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylistSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistMeta"
        app:layout_constraintBottom_toTopOf="@id/miniPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/miniPlayer"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_card"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/miniContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/miniProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMiniCover"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/ivMiniCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_cover" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvMiniTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Song"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/cardMiniCover"
                app:layout_constraintTop_toTopOf="@id/cardMiniCover"
                app:layout_constraintEnd_toStartOf="@id/btnMiniPrev" />

            <TextView
                android:id="@+id/tvMiniArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artist"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardMiniCover"
                app:layout_constraintTop_toBottomOf="@id/tvMiniTitle"
                app:layout_constraintBottom_toBottomOf="@id/cardMiniCover"
                app:layout_constraintEnd_toStartOf="@id/btnMiniPrev" />

            <ImageButton
                android:id="@+id/btnMiniPrev"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:contentDescription="Prev"
                android:src="@drawable/ic_prev"
                app:tint="@color/textPrimary"
                app:layout_constraintEnd_toStartOf="@id/btnMiniPlay"
                app:layout_constraintTop_toTopOf="@id/cardMiniCover"
                app:layout_constraintBottom_toBottomOf="@id/cardMiniCover" />

            <ImageButton
                android:id="@+id/btnMiniPlay"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:contentDescription="Play/Pause"
                android:src="@drawable/ic_play"
                app:tint="@color/textPrimary"
                app:layout_constraintEnd_toStartOf="@id/btnMiniNext"
                app:layout_constraintTop_toTopOf="@id/cardMiniCover"
                app:layout_constraintBottom_toBottomOf="@id/cardMiniCover" />

            <ImageButton
                android:id="@+id/btnMiniNext"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:contentDescription="Next"
                android:src="@drawable/ic_next"
                app:tint="@color/textPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardMiniCover"
                app:layout_constraintBottom_toBottomOf="@id/cardMiniCover" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/miniProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/mini_player_progress"
            android:indeterminate="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>